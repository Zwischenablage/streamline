<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>

<%= form_tag({}, {method: :get, class: 'streamline-search__input-wrapper'}) do %>
  <%= text_field_tag(:q, params[:q], class: "streamline-search__text-input", placeholder: "Search within projects...") %>
<%= submit_tag("Search", class: "button streamline-search__submit") %>

<%= form_for :search_param_sets, url: search_param_sets_path, method: :get do |form| %>
  <%= form.text_field :query, value: params[:search_param_sets].presence && params[:search_param_sets][:query] %>
  <%= form.submit 'Search' %>
<% end %>

<% end %>
