<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table class="table table-hover table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Oracleid</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.oracleID %></td>
        <td><%= link_to 'Show', customer_project_path(@customer, project) %></td>
        <td><%= link_to 'Edit', edit_customer_project_path(@customer, project) %></td>
        <td><%= link_to 'Destroy', customer_project_path(@customer, project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_customer_project_path(@customer) %>
